<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    tools:context="com.sjjd.wyl.playandroid.view.activities.LoginActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/android"/>

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="PLAY ANDROID"
        android:textColor="#1296db"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:id="@+id/llprogress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rotate_layout_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/imgLoginUser"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/user"
                    />

                <View
                    android:id="@+id/view"
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/imgLoginUser"
                    android:background="@color/main_blue"/>

                <EditText
                    android:text="wyliwwg"
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/imgDeleteName"
                    android:layout_toRightOf="@id/view"
                    android:background="@null"
                    android:hint="请输入账号"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/main_blue"
                    android:textColorHint="@color/lightgrey"
                    android:textCursorDrawable="@drawable/cursor_login"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/imgDeleteName"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/seletor_delete_login"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/imgLoginPsw"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/psw"
                    />

                <View
                    android:id="@+id/view1"
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/imgLoginPsw"
                    android:background="@color/main_blue"/>

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/etUserPsw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/imgDeletePsw"
                    android:layout_toRightOf="@id/view1"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/main_blue"
                    android:textColorHint="@color/lightgrey"
                    android:textCursorDrawable="@drawable/cursor_login"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/imgDeletePsw"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/seletor_delete_login"/>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_btn_login"
            android:text="登录"
            android:textColor="#1296db"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_login"
            android:text="注册"
            android:textColor="#1296db"
            android:textSize="20sp"/>
    </LinearLayout>


</LinearLayout>
